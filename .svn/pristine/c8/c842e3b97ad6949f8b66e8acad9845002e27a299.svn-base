/* ================================
   Timesheet Table Styles
================================= */
.Sticky-table {
    width: 100%;
    max-height: 450px;
    overflow-y: auto;
    margin-top: 1px;
    border-collapse: collapse;
    table-layout: fixed;

}
  
.timesheet-table{
    width: 100%;
    max-height: 450px;
    overflow-y: auto;
    margin-top: 1px;
    border-collapse: collapse;
    //table-layout: fixed;

}
.timesheet-table th,
.timesheet-table td {
  padding: 10px;
  text-align: left;
  border: 1px solid #ddd;
  word-wrap: break-word; /* Allows long words to wrap */
  overflow: hidden;
}
.remarks-column {
    word-break: break-word; /* Ensures long words break */
    white-space: normal; /* Allows wrapping */
    overflow-wrap: break-word;
    max-width: 220px; /* Adjust width as needed */
}

.timesheet-table th {
    background-color: #3498DB;
    font-weight: bold;
    color: white; /* Dark text for contrast */
}

.timesheet-table input,
.timesheet-table select {
    width: 120%;
    padding: 6px;
    border-radius: 4px;
    border: 1px solid #ccc;
}

/* Table Row Hover Effect */
.timesheet-table tr:hover {
    background-color: #f1f1f1;
}

/* Checkbox Styling */
.timesheet-table input[type="checkbox"] {
    width: 16px;
    height: 16px;
    cursor: pointer;
}

