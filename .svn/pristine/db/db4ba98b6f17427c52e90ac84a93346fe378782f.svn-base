.timesheet-table {
  width: 100%;
  border-collapse: collapse;
  margin-bottom: 20px;
  margin-top: 2px; /* Adjust margin to move table down */
  text-align: center;/* Center align text */
  overflow-y: auto; 
  table-layout: fixed;
}

.timesheet-table th,
.timesheet-table td {
  padding: 3px;
  text-align: center; /* Center align table data */
  border: 1px solid #ddd;
}

.timesheet-table th {
  background-color: #3498DB; /* Light Blue */
  color: white; /* Dark text for contrast */
  font-weight: bold;
  font-size: 14px; /* Reduced font size */
  padding: 3px 6px; /* Reduced padding */
  height: 45px; /* Adjust header height */
}


.timesheet-table input,
.timesheet-table select {
  width: 100%;
  padding: 6px;
  border-radius: 4px;
  border: 1px solid #ccc;
}


