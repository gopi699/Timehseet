@layer utilities {
  /* Hide scrollbar for Chrome, Safari and Opera */
  .no-scrollbar::-webkit-scrollbar {
      display: none;
  }
 /* Hide scrollbar for IE, Edge and Firefox */
  .no-scrollbar {
      -ms-overflow-style: none;  /* IE and Edge */
      scrollbar-width: none;  /* Firefox */
}
}
/* ðŸ”¹ Keep the download button at the top-right */
.download-btn-container {
  position: absolute;
  top: 65px;
  right: 20px;
  z-index: 1000;
}

/* ðŸ”¹ Button styling */
.download-btn {
  background-color: #0f6516c4;
  color: white;
  padding:5px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  white-space: nowrap;
  margin-left: auto;
  margin-right: 10px;
}

.download-btn:hover {
  background-color:#2b282852;
}

.clear-btn {

  margin-left: -27px;
  
}



.search-container {
  display: flex;
  align-items: center; /* Ensures vertical alignment */
  justify-content: flex-start; /* Aligns items at the start */
  gap: 10px; /* Adds space between label and input */
  margin-bottom: 10px;
  margin-top: 10px;
}

.search-label {
  font-weight: bold;
  white-space: nowrap; /* Prevents label from moving to a new line */
}

.search-input {
  //flex-grow: 1; /* Expands input to take available space */
  padding: 5px;
  border: 1px solid #ccc;
  border-radius: 4px;
  max-width: 300px; /* Ensures input doesn't get too wide */
}

